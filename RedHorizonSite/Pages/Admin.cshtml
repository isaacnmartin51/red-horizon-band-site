@page
@model AdminModel

<h1>Admin Page</h1>
<label for="addShow">Add Show</label>
<div class="p-8">
    <form id="addShow" method="post" class="w-full max-w-sm">
        <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
                <label class="block md:text-right mb-1 md:mb-0 pr-4" for="date">Date</label>
            </div>
            <div class="md:w-2/3">
                <input
                    class="appearance-none bg-zinc-600 border-2 border-gray-500 rounded w-full py-2 px-4 leading-tight focus:outline-none focus:bg-zinc-400 focus:border-gray-500"
                    id="date" type="datetime-local" asp-for="ShowDate" />
                    <span asp-validation-for="ShowDate"></span>
            </div>
        </div>
        <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
                <label class="block md:text-right mb-1 md:mb-0 pr-4" for="location">Location</label>
            </div>
            <div class="md:w-2/3">
                <input
                    class="appearance-none bg-zinc-600 border-2 border-gray-500 rounded w-full py-2 px-4 leading-tight focus:outline-none focus:bg-zinc-400 focus:border-gray-500"
                    id="location" type="text" asp-for="Location" placeholder="Location" />
                <span asp-validation-for="Location"></span>
            </div>
        </div>
        <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
                <label class="block md:text-right mb-1 md:mb-0 pr-4" for="desc">Description</label>
            </div>
            <div class="md:w-2/3">
                <input
                    class="appearance-none bg-zinc-600 border-2 border-gray-500 rounded w-full py-2 px-4 leading-tight focus:outline-none focus:bg-zinc-400 focus:border-gray-500"
                    id="desc" type="textarea" asp-for="Description" placeholder="Description" />
                    <span asp-validation-for="Description"></span>
            </div>
        </div>
        <div class="md:flex md:items-center">
            <div class = md:w-1/3>
            </div>
            <div class="md:w-2/3"></div>
            <input class="shadow bg-zinc-500 hover:bg-zinc-300 focus:shadow-outline focus:outline-none font-bold py-2 px-4 rounded"
                type="submit">
                </input>
        </div>
    </form>
</div>